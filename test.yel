import_from(find_module('socket'), '*');

s = socket_create();
socket_bind(s, 'server.ru', 8080);
socket_listen(s, 10);

conn = socket_accept(s);

run = 1;

while (run) {
    str = input('Enter: ');
    socket_send(s, len(str), str);

    data = socket_recv(s, 1024);
    if (not data) {
        print('Not Data!');
        run = 0;
    }
}

socket_close_connection(conn);
socket_close(s);
